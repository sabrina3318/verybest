<!-- Validation failure messages -->
<% if @venue.errors.any? %>
  <% @venue.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit venue #<%= @venue.id %>
</h1>

<hr>

<!-- Form venue start -->
<form action="/update_venue/<%= @venue.id %>" method="post">
<!-- Form venue end -->

  <button class="btn btn-block btn-outline-secondary">
    Update venue
  </button>
</form>

<hr>

<a href="/venues">
  Go back
</a>
